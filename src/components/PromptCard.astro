---
const { title, description, category, tags, href } = Astro.props;
const tagList = (tags || []).join(",");
---

<a
  href={href}
  data-prompt-card
  data-title={title}
  data-description={description}
  data-category={category}
  data-tags={tagList}
  class="group relative flex h-full min-w-0 flex-col justify-between rounded-2xl border border-zinc-200 bg-white/70 p-6 shadow-[0_0_0_1px_rgba(255,255,255,0.4)] transition hover:-translate-y-1 hover:border-zinc-300 hover:bg-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900/80 focus-visible:ring-offset-2 focus-visible:ring-offset-white dark:border-zinc-800 dark:bg-zinc-950/40 dark:shadow-[0_0_0_1px_rgba(24,24,27,0.6)] dark:hover:border-zinc-700 dark:focus-visible:ring-zinc-100/80 dark:focus-visible:ring-offset-zinc-950"
>
  <div class="min-w-0 space-y-3">
    <div class="flex items-center justify-between text-xs uppercase tracking-[0.3em] text-zinc-500 dark:text-zinc-400">
      <span>{category}</span>
      <span class="text-zinc-400 dark:text-zinc-500">Prompt</span>
    </div>
    <h2 class="break-words text-xl font-semibold text-zinc-900 transition group-hover:text-zinc-900 dark:text-zinc-100 dark:group-hover:text-zinc-50">
      {title}
    </h2>
    <p class="break-words text-sm leading-relaxed text-zinc-600 dark:text-zinc-400">{description}</p>
  </div>
  <div class="mt-6 flex flex-wrap gap-2">
    {tags?.map((tag) => (
      <span class="rounded-full border border-zinc-200 px-3 py-1 text-[11px] uppercase tracking-[0.2em] text-zinc-600 dark:border-zinc-800 dark:text-zinc-400">
        {tag}
      </span>
    ))}
  </div>
</a>
